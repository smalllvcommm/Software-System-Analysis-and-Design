{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // ✅ 已包含 DOM，保留（关键）
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx", // ✅ 已正确设置，保留（关键）

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "erasableSyntaxOnly": true, // ❌ 移除：此实验性选项会限制 JSX 语法
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* 新增：显式声明类型依赖 */
    "types": ["react", "react-dom"] // ✅ 添加：确保 React/DOM 类型被加载
  },
  "include": ["src"] // ✅ 已正确包含 src 目录，保留
}